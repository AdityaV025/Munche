<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.munche">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/munche_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/munche_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".NewReviewActivity"></activity>
        <activity android:name=".ReviewsActivity" />
        <activity
            android:name="UI.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="UI.ChangeLocationActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".CurrentOrderActivity" />
        <activity android:name=".OrdersActivity" />
        <activity android:name=".OrderSuccessfulActivity" />
        <activity android:name=".CheckoutActivity" />
        <activity android:name=".MainRestaurantPageActivity" />
        <activity android:name=".EmptyCartActivity" />
        <activity
            android:name=".CartItemActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="UI.AddInfoActivity" />
        <activity android:name="UI.OtpActivity" />
        <activity android:name="UI.LoginActivity" />
        <activity android:name=".MainActivity" />
        <activity
            android:name="com.paytm.pgsdk.PaytmPGActivity"
            android:configChanges="keyboardHidden|orientation|keyboard"
            android:screenOrientation="portrait" />
    </application>

</manifest>