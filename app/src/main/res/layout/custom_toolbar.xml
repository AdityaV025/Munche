<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    android:id="@+id/customToolBar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/userLocationNickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivering To"
            android:textSize="20sp"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/lightWhite"/>

        <TextView
            android:id="@+id/userLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="getting location ..."
            android:fontFamily="@font/open_sans"
            android:layout_below="@id/userLocationNickName"
            android:textColor="@color/lightWhite"/>

        <ru.nikartm.support.ImageBadgeView
            android:id="@+id/imageBadgeView"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/cart_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="21dp"
            app:ibv_badgeTextSize="9sp"
            app:ibv_fixedBadgeRadius="7dp"
            app:ibv_badgeTextStyle="bold"
            app:ibv_badgeTextColor="#ffffff"
            app:ibv_badgeColor="@color/colorAccent"
            app:ibv_badgePosition="top_right"
            app:ibv_maxBadgeValue="99"/>

    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>